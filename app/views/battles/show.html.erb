<h1><%= @challenger.nickname %> VS. <%= @opponent.nickname %></h1>
<br>
<% if @battle.battle_over? %>
<h1> <%= Character.find(@battle.winner_id).user.nickname %> Wins </h1>
<% end %>
<div>
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
</div>

<div style = "float:left; padding: 20px; margin: 10px; border: 1px solid black; border-radius: 20px;">
  Character: <%= @challenger_character.char_type  %> <br>
  HP: <%= @challenger_character.hp  %> <br>
  Level: <%= @challenger_character.level  %> <br>
  <br>
  <%if current_user.id == @challenger.id %>
    <%= form_tag submit_move_path do %>
      <%@challenger_character.character_abilities.each do |character_ability| %>
        <%= radio_button_tag 'character_ability_id', "#{character_ability.id}" %>
        <%= label_tag "#{character_ability.ability.name}" %> <br>
        <% end %>
        <br>
        <%= submit_tag 'Submit Move' %>
    <% end %>
  <% end %>

</div>

<div style = "float:right; padding: 20px; margin: 10px; border: 1px solid black; border-radius: 20px;">
  Character: <%= @opponent_character.char_type  %> <br>
  HP: <%= @opponent_character.hp  %> <br>
  Level: <%= @opponent_character.level  %> <br>
  <br>
  <%if current_user.id == @opponent.id %>
    <%= form_tag submit_move_path do %>
      <% @opponent_character.character_abilities.each do |character_ability| %>
        <%= radio_button_tag 'character_ability_id', "#{character_ability.id}" %>
        <%= label_tag "#{character_ability.ability.name}" %> <br>
        <% end %>
        <br>
        <%= submit_tag 'Submit Move' %>
    <% end %>
  <% end %>
</div>

<div style="clear:both;">
<br><br><br><br>
ADD ACTIVITY LOG
</div>
