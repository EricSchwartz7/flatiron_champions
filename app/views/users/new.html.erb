<h1>Sign Up</h1>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
  <ul>
  <% @user.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
<% end %>
<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br>
  <%= f.label :nickname %>
  <%= f.text_field :nickname %><br>
  <%= f.submit 'Sign Up' %>

<% end %>
