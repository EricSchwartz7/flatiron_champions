<div class="center-align">
<h2>Sign Up</h2>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
  <ul>
  <% @user.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
<% end %>
</div>
<div>
<ul class="container">
    <%= form_for @user do |f| %>
    <div class="row">
      <div class="col s12">
        <i class="material-icons prefix">account_circle</i>
        <%= f.label :username %>
        <%= f.text_field :username, class: 'input-field' %><br>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <i class="material-icons prefix">email</i>
        <%= f.label :email %>
        <%= f.text_field :email, class: 'input-field' %><br>
      </div>
    </div>
    <div class="row">
    <div class="col s12">
    <i class="material-icons prefix">lock</i>
    <%= f.label :password %>
    <%= f.password_field :password, class: 'input-field' %><br>
    </div>
    </div>
    <div class="row">
    <div class="col s12">
    <i class="material-icons prefix">lock_outline</i>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'input-field' %><br>
    </div>
    </div>
    <div class="row">
    <div class="col s12">
    <i class="material-icons prefix">assignment_ind</i>
    <%= f.label :nickname %>
    <%= f.text_field :nickname, class: 'input-field' %><br>
    </div>
    </div>
    <%= f.submit "Sign Up", class: 'sign-up-button' %><br>
    <% end %>
  </div>
</div>
</div>
